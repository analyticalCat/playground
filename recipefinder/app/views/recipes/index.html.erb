<h1>Searching for - <%= @search_term %></h1>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><a><img src=<%= recipe["image_url"]%> height="100" width=100" /></a></td>
      <td><a><%= sanitize recipe["title"] %></a></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
